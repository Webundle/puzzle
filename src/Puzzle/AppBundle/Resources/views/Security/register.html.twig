{% extends "AppBundle::layout.html.twig" %}

{% block title %}
{{ parent() }} - Inscription
{% endblock %}
{% block header %}
{% endblock %}
{% block section %}
<section class="height-100vh page-section-ptb login login-gradient">
	<div class="container">
		<div class="row row-eq-height no-gutter vertical-align">
			<div
				class="col-md-4 col-md-offset-2 login-fancy-bg bg-overlay-black-30"
				style="background: url(images/login/02.jpg);">
				<div class="login-fancy pos-r">
					<h2 class="text-white mb-20">Hello world!</h2>
					<p class="mb-20 text-white">Create tailor-cut websites with the
						exclusive multi-purpose responsive template along with powerful
						features.</p>
					<ul class="list-unstyled list-inline pos-bot pb-30">
						<li><a class="text-white" href="{{ url('app_homepage') }}">Accueil</a></li>
						<li><a class="text-white" href="#"> Termes</a></li>
						<li><a class="text-white" href="#"> Privé</a></li>
						
					</ul>
				</div>
			</div>
			<div class="col-md-4 white-bg">
				<div class="login-fancy pb-40 clearfix">
    				<div class="text-center">
        				<img src="{{ asset('logo.jpg') }}" alt="Logo" width="30%">
        			</div>
    				<h3 class="mb-30 text-center">Inscrivez-vous</h3>
    				<div class="section-field mb-20">
						<label class="mb-10" for="register_first_name">Nom </label>
						<input type="text" id="register_first_name" class="web form-control"
						name="first_name" value="" placeholder="Nom" />
					</div>*<div class="section-field mb-20">
						<label class="mb-10" for="register_last_name">Prénoms </label>
						<input type="text" id="register_first_name" class="web form-control"
						name="first_name" value="" placeholder="Prénoms" />
					</div>
					<div class="section-field">
						<select name="promotion" class="form-control">
							<option value="">Vous êtes de quelle promotion...</option>
							{% for start in 1974.."now"|date("Y") - 3 %}
								{% set end = start + 3 %}
								<option value="{{ start }}-{{ end }}">{{ start }}-{{ end }}</option>
							{% endfor %}
						</select>
					</div>
					<div class="section-field mb-20">
						<label class="mb-10" for="login_username">E-mail* </label>
						<input type="text" id="login_username" class="web form-control"
						name="username" value="{{ last_username }}" placeholder="Nom d'utilisateur" />
					</div>
					<div class="section-field mb-20">
						<label class="mb-10" for="login_password">Mot de passe* </label>
						<input type="password" id="login_password" name="password" class="Password form-control" placeholder="Mot de passe"/>
						 
					</div>
					<div class="section-field">
						<div class="remember-checkbox mb-30">
							<input type="checkbox" class="form-control" name="connect_auto"/>
							<label for="two"> Me connecter automatiquement</label>
						</div>
					</div>
					<a href="#" class="button"> <span>Inscription</span> <i
						class="fa fa-check"></i>
					</a>
					<p class="mt-20 mb-0">
						Vous avez déjà un compte ? <a href="signup-04.html"> Connectez-vous ici</a>
					</p>
				</div>
			</div>
		</div>
	</div>
</section>

{% endblock %}
{% block footer %}
{% endblock %}


